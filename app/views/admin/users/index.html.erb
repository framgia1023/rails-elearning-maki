<div class="card">
    <div class="card-header">       
        <h3> Users List </h3>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col">Name</th>
            <th scope="col"></th>
            <th scope="col">Email</th>
            <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            <% @users.each do |user| %>
            <tr>
            <td>
                <% if user.picture? %>
                    <%= image_tag user.picture.url, class: 'small-pic' %>
                <% else %>
                    <%= image_tag 'default.jpg', class: "small-pic" %>
                <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.email%></td>
            <td>
                <% unless current_user?(user) %>
                    <% if user.admin? %>
                        <%= link_to "Remove Admin", remove_admin_admin_user_path(id: user), class: 'btn btn-outline-warning' %>
                    <% else %>
                        <%= link_to "Set as Admin", set_admin_admin_user_path(id: user), class: 'btn btn-warning text-white'%>
                    <% end %>
                <% end %>
            </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="mt-3">
        <%= will_paginate %>
</div> 