<div class="card">
    <div class="card-header">       
        <h3> Admin | Words
        <%= link_to "Add Word", new_admin_category_word_path(@category), class: "btn btn-info float-right" %>
        <%= link_to "Go Back", admin_categories_path, class: "btn btn-outline-secondary float-right" %>
        </h3>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col">Words</th>
            <th scope="col">Answer</th>
            <th scope="col"></th>
            <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            <% @words.each do |word| %>
            <tr>
            <td><%= word.word %></td>
            <td>
            <%= word.correct_answer.choice %>
            </td>
            <td>
                <%= link_to edit_admin_category_word_path(category_id:@category, id:word), class: "text-muted" do %>
                    <i class="fas fa-edit"></i>
                <% end %>
            </td>
            <td>
                <%= link_to admin_category_word_path(category_id:@category, id:word), method: :delete, class: "text-muted" do %>
                    <i class="fas fa-trash-alt"></i>
                <% end %>
            </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>