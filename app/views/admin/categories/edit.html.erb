<div class="row">
    <div class="col-lg-7 offset-lg-3">
        <div class="card" style="width: 33rem;">
            <div class="card-body">
                <h3 class="card-title text-center">Edit Category</h3>
                    <%= form_for [:admin, @category] do |f| %>
                            <%= render 'shared/error_messages', object: f.object %>
                            <div class="form-group">
                                <%= f.label :title %>
                                <%= f.text_field :title, class: 'form-control' %>
                            </div>
                            <div class="form-group">
                                <%= f.label :description %>
                                <%= f.text_area :description, class: 'form-control', rows: 10, cols: 20 %>
                            </div>
                            
                            <%= link_to "Go Back", admin_categories_path, class: 'btn btn-outline-secondary'%>
                            <%= f.submit "Update Category", class: 'btn btn-primary btn-fluid' %>
                    <% end %>
            </div>
        </div>
    </div>
</div>