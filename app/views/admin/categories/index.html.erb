<div class="card">
    <div class="card-header">       
        <h3> Admin | Categories 
        <%= link_to "Add Category", new_admin_category_path, class: "btn btn-warning float-right" %>
        </h3>
    </div>
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Words</th>
                <th scope="col"></th>
                <th scope="col"></th>
                </tr>
            </thead>

            <tbody>
                <% @categories.each do |category| %>
                    <tr>
                    <td><%= link_to category.title, admin_category_words_path(category), class: "my-yellow" %></td>
                    <td><%= category.description %></td>
                    <td><%= category.words.count %></td>
                    <td>
                        <%= link_to edit_admin_category_path(category), class: "text-muted" do %>
                            <i class="fas fa-edit"></i>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to admin_category_path(category), method: :delete, class: "text-muted" do %>
                            <i class="fas fa-trash-alt"></i>
                        <% end %>
                    </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
</div>


<div class="mt-3">
        <%= will_paginate %>
</div> 
