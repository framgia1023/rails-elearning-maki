<div class="row">
    <div class="col-lg-4">
        <div class="card mb-6">
            <div class="card-body text-center">
                <% if @user.picture? %>
                    <%= image_tag @user.picture.url, class: 'pic-list' %>
                <% else %>
                    <%= image_tag 'default.jpg', class: 'pic-list' %>
                <% end %>
                <p></P>
                    <h5><%= @user.name %></h5>
                    <p><%= @user.email %></p>

                <hr>
<!-- number of following and followed ã€€-->
                    <div class="d-inline mr-4"><%= "Following" %></div>
                    <div class="d-inline ml-3"><%= "Followers" %></div>
                    <div>
                        <strong id="following">
                        <%=link_to @user.following.count, following_user_path(@user), class: "mr-5" %>
                        </strong>
                        
                        <strong id="followers">
                        <%=link_to @user.followers.count, followers_user_path(@user), class: "ml-5" %>
                        </strong>
                    </div>
                <hr>
<!-- learned words -->
            <%= "Learned Words" %>
            <div>
                <strong><%=link_to @user.learned_word, user_words_path(@user)  %></strong>
            </div>
            </div>
        </div>
    </div>
<!-- Learned Words -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
            <%= "Learned Words" %>
<!-- Category Select Dropdown -->
            <%= link_to "Go Back", user_words_path(@user), class: "btn btn-info float-right" %>
            </div>
<!-- Learned Words List -->
            <div class="card-body">
                 <% unless @lessons.any? %>
                    <div class="text-muted">Nothing to show.</div>
                <% else %>
<!-- Select Tag -->
                    <div>
                        <%= form_tag(user_words_path, method: 'get') do %>
                        <%= label_tag :title, "Category" %>
                        <%= select_tag "title", options_for_select(@select), prompt: @category, onchange: 'this.form.submit()' %>
                        <%#= submit_tag :search %>
                        <% end %>  
                    </div>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                        <th scope="col">Word</th>
                        <th scope="col">Correct Answer</th>
                        <th scope="col">Your Answer</th>
                        <th scope="col"></th>
                        </tr>
                        </thead>

                        <tbody>
                        <% @lessons.each do |lesson| %>
                        <% lesson.answers.each do |answer|  %>
                        <tr>
                        <td><%= answer.word.word %></td>
                        <td><%= answer.word.correct_answer.choice %></td>
                        <td><%= answer.choice.choice %></td>
                        <td>
                            <% if answer.choice.correct == true %>
                            <div><i class="fas fa-check"></i></div>
                            <% else %>
                            <div><i class="fas fa-times"></i> </div>
                            <% end %>
                        </td>
                        </tr>
                        <% end %>
                        <% end %>
                        </tbody>
                    </table>
                <% end %>
            </div>
        </div>
    </div>

</div>
