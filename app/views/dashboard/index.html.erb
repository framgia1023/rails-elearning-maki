<div class="row">
    <div class="col-lg-4">
        <div class="card mb-6">
            <div class="card-body text-center">
                <% if current_user.picture? %>
                    <%= image_tag current_user.picture.url, class: 'pic-list' %>
                <% else %>
                    <%= image_tag 'default.jpg', class: 'pic-list' %>
                <% end %>
                <p></P>
                    <h5><%= current_user.name %></h5>
                    <p><%= current_user.email %></p>

                <hr>
<!-- number of following and followed ã€€-->
                    <div class="d-inline mr-4"><%= "Following" %></div>
                    <div class="d-inline ml-3"><%= "Followers" %></div>
                    <div>
                        <strong id="following">
                        <%=link_to current_user.following.count, following_user_path(current_user), class: "mr-5" %>
                        </strong>
                        
                        <strong id="followers">
                        <%=link_to current_user.followers.count, followers_user_path(current_user), class: "ml-5" %>
                        </strong>
                    </div>
                <hr>
<!-- learned words -->
            <%= "Learned Words" %>
            <div>
             <strong><%=link_to current_user.learned_word, user_words_path(current_user) %></strong>
            </div>
            </div>
        </div>
    </div>
<!-- Activity Feed -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header"><%= "Activity Feed" %></div>
            <div class="card-body">
                <% if @activities.nil?  %>
                <div class="text-muted">Nothing to show.</div>
                <% else %>
                 <ul class="list-unstyled">
                     <% @activities.each do |activity| %>
                        <li class="media mb-4">
                        <div class="mr-2">
<!-- User's Image -->
                            <% if activity.user.picture? %>
                            <%= image_tag activity.user.picture.url, class: 'small-pic' %>
                            <% else %>
                            <%= image_tag 'default.jpg', class: "small-pic" %>
                            <% end %> 
                        </div>
<!-- Activity Content (Lesson/User) -->
                        <div class="media-body">
                            <% if activity.user_id == current_user.id %>
                                <%= link_to "You", user_path(current_user) %> 
                            <% else %>
                                <%= link_to activity.user.name, user_path(activity.user.id) %> 
                            <% end %>
                            <% if activity.action_type == "Lesson" %>
                                learned
                                <%= activity.action.result %> of <%= activity.action.category.words.count %>
                                in <%= link_to activity.action.category.title, lesson_path(activity.action.id)  %>
                            <% else %>
                                followed
                                <% if activity.action.followed_id == current_user.id %>
                                <%= link_to "you", user_path(current_user) %>
                                <% else %>
                                <%= link_to followed(activity.action.followed_id).name, user_path(activity.action.followed_id) %> 
                                <% end %>
                            <% end %>
                            <div>
                            <small class="text-muted"><%= time_ago_in_words(activity.created_at) %> ago</small>
                            </div>
                        </div>
                        </li>
                    <% end %>
                </ul>
                 <div class="text-center border-top pt-3">
                    <%= will_paginate @activities %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

</div>

